<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="match_parent"
                                   android:layout_height="@dimen/dimen_200"
                                   android:layout_margin="@dimen/dimen_1"
                                   android:orientation="vertical"
                                   app:cardBackgroundColor="@android:color/white"
                                   app:cardCornerRadius="@dimen/dimen_15"
                                   app:cardElevation="@dimen/dimen_10">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dimen_8">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/dimen_85"
                    android:layout_height="@dimen/dimen_85"
                    app:cardCornerRadius="@dimen/dimen_10"
                    app:cardElevation="@dimen/dimen_3">

                <ImageView
                        android:id="@+id/ivProfileImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"/>

                <ImageView
                        android:id="@+id/ivTickMark"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#11000000"
                        android:padding="@dimen/dimen_6"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_check"
                        android:visibility="gone"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_marginEnd="@dimen/dimen_5"
                    android:layout_marginRight="@dimen/dimen_5"
                    android:orientation="vertical">


                <com.mytaxi.sheraz.widgets.TextViewArcaHeavy
                        android:id="@+id/tvDriverName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Driver Name"
                        android:textAllCaps="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/colorSecondaryText"/>

                <com.mytaxi.sheraz.widgets.TextViewNormal
                        android:id="@+id/tvEstimatedTimeOfArrival"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 mins away"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textSize="@dimen/text_size_smaller"
                        android:textColor="@color/colorDarkText"/>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:id="@+id/ivRatingStar1"
                            android:layout_width="@dimen/dimen_18"
                            android:layout_height="@dimen/dimen_18"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_star"/>

                    <ImageView
                            android:id="@+id/ivRatingStar2"
                            android:layout_width="@dimen/dimen_18"
                            android:layout_height="@dimen/dimen_18"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_star"/>

                    <ImageView
                            android:id="@+id/ivRatingStar3"
                            android:layout_width="@dimen/dimen_18"
                            android:layout_height="@dimen/dimen_18"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_star"/>

                    <ImageView
                            android:id="@+id/ivRatingStar4"
                            android:layout_width="@dimen/dimen_18"
                            android:layout_height="@dimen/dimen_18"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_star"/>

                    <ImageView
                            android:id="@+id/ivRatingStar5"
                            android:layout_width="@dimen/dimen_18"
                            android:layout_height="@dimen/dimen_18"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_star"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimen_5"
                android:orientation="vertical"
                android:gravity="center_vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dimen_2"
                    android:paddingBottom="@dimen/dimen_2">

                <com.mytaxi.sheraz.widgets.TextViewNormal
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Availability Status"
                        android:textColor="@color/colorDarkText"
                        android:textSize="@dimen/text_size_smallest"
                />

                <com.mytaxi.sheraz.widgets.TextViewNormal
                        android:id="@+id/tvAvailabilityValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/colorDarkText"
                        android:textSize="@dimen/text_size_smallest"
                />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dimen_2"
                    android:paddingBottom="@dimen/dimen_2">

                <com.mytaxi.sheraz.widgets.TextViewNormal
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Estimated Distance"
                        android:textColor="@color/colorDarkText"
                        android:textSize="@dimen/text_size_smallest"/>

                <com.mytaxi.sheraz.widgets.TextViewNormal
                        android:id="@+id/tvEstimatedDistanceValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorDarkText"
                        android:textSize="@dimen/text_size_smallest"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dimen_2"
                    android:paddingBottom="@dimen/dimen_2">

                <com.mytaxi.sheraz.widgets.TextViewNormal
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Vehicle Model"
                        android:textColor="@color/colorDarkText"
                        android:textSize="@dimen/text_size_smallest"/>

                <com.mytaxi.sheraz.widgets.TextViewNormal
                        android:id="@+id/tvVehicleModelValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorDarkText"
                        android:textSize="@dimen/text_size_smallest"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dimen_2"
                    android:paddingBottom="@dimen/dimen_2">

                <com.mytaxi.sheraz.widgets.TextViewNormal
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Vehicle ID"
                        android:textColor="@color/colorDarkText"
                        android:textSize="@dimen/text_size_smallest"/>

                <com.mytaxi.sheraz.widgets.TextViewNormal
                        android:id="@+id/tvVehicleIdValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorDarkText"
                        android:textSize="@dimen/text_size_smallest"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>